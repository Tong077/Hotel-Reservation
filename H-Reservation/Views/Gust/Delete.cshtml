@using H_application.DTOs.GuestDto
@model GuestDtoUpdate

@{
    ViewData["Title"] = "Guest";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Delete Guest</h4>
        <form asp-controller="Gust" asp-action="Destroy" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="GuestId" type="hidden" />
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <input asp-for="FirstName" type="text" placeholder="First Name" class="form-control " />

                </div>
                <div class="form-group col-sm-6">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" type="text" placeholder="Last Name" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" type="text" placeholder="Phone" class="form-control" />
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" type="text" placeholder="Address" class="form-control" />
                </div>
            </div>
            <div class="form-group float-right">
                <button type="submit" class="btn btn-sm btn-success ml-1">Delete</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>