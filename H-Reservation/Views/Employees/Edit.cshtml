@using H_application.DTOs.EmployeesDto
@using H_application.DTOs.HotelDto
@model EmployeeDtoUpdate

@{
    ViewData["Title"] = "Employee";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Employee Information</h4>
        <form asp-controller="Employees" asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EmployeeId" type="hidden" />
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                    <label asp-for="FullName" class="control-label">Hotel Name</label>
                    <input asp-for="FullName" type="text" placeholder="Full Name" class="form-control " />

                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" type="text" placeholder="Phone" class="form-control" />
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Role" class="text-danger"></span>
                    <label asp-for="Role" class="control-label">Role</label>
                    <input asp-for="Role" type="text" placeholder="Role" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="ShiftTime" class="text-danger"></span>
                    <label asp-for="ShiftTime" class="control-label">Shift Time</label>
                    <input asp-for="ShiftTime" type="text" placeholder="Shift Time" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                    <label asp-for="HireDate" class="control-label">Hire Date</label>
                    <input asp-for="HireDate" type="datetime-local" placeholder="Hire Date" class="form-control" />
                </div>


            </div>
            <div class="form-group">
                <span asp-validation-for="Status" class="text-danger"></span>
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="">Select Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="OnLeave">On Leave</option>
                    <option value="Terminated">Terminated</option>
                </select>
            </div>
            <div class="form-group float-right">
                <button type="submit" class="btn btn-sm btn-success ml-1">Save Change</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>