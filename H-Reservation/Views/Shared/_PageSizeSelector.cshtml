<form method="get" class="mb-3">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">

        <!-- Search Box -->
        <div class="input-group input-group-sm" style="width: 260px;">
            <span class="input-group-text bg-light"><i class="fa fa-search"></i></span>
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Search guest, room, status..."
                   onkeypress="if(event.key==='Enter'){ this.form.submit(); }" />
        </div>

        <!-- Page Size Dropdown -->
        <div class="input-group input-group-sm" style="width: 190px;">
            <span class="input-group-text bg-light fw-semibold">Show</span>

            <select name="pageSize" class="form-select" onchange="this.form.submit()">
                <option value="10" selected=" @(ViewBag.PageSize == 10 ? "selected" : "")">10</option>
                <option value="25" selected="@(ViewBag.PageSize == 25 ? "selected" : "")">25</option>
                <option value="50" selected=" @(ViewBag.PageSize == 50 ? "selected" : "")">50</option>
                <option value="100" selected=" @(ViewBag.PageSize == 100 ? "selected" : "")">100</option>
            </select>

            <span class="input-group-text bg-light fw-semibold">entries</span>
        </div>

    </div>
</form>
