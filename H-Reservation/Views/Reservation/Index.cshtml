@using H_application.DTOs.ReservationDto
@model IEnumerable<ReservationResponse>
@* <partial name="_style" />
<partial name="GetallInformation" />
<partial name="GetRevenueSummary" /> *@
<partial name="_RoomCalendar" />
<div class="card shadow border-0 rounded-4">
    <div class="card-body">
        <h4 class="card-title">Reservation Information</h4>
        <a asp-action="Create" class="btn btn-sm btn-success mt-2 mb-2"><i class="fa-solid fa-square-plus"></i></a>
        <div class="table-responsive">
            <table class="table align-middle table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Guest</th>
                        <th>Room</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                        <th>Total Price</th>
                        <th>Currency</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.FirstName @item.LastName</strong>
                            </td>
                            <td>
                                @{
                                    var roomCount = item.Rooms?.Count ?? 1;
                                   
                                }
                               
                                <span class="fw-semibold">
                                    @string.Join(", ", item.Rooms?.Select(r =>
                                    $"{r.RoomNumber} - {r.RoomTypeName} - " +
                                    (r.RoomCurrency switch
                                    {
                                        "USD" => $"${r.RoomPrice:F2}",
                                        "KHR" => $"{Math.Round(r.RoomPrice ?? 0)} Riel",
                                        _ => r.RoomPrice.ToString()
                                    })
                                                                ) ?? new string[0])
                            </span>
                        </td>
                        <td>@item.CheckInDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.CheckOutDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-success fw-semibold">
                            @if (item.Currency == "USD")
                                {
                                    @($"{item.TotalPrice:N2} $")
                                }
                                else if (item.Currency == "KHR")
                                {
                                    @($"{item.TotalPrice:N0} ៛")
                                }
                                else
                                {
                                    @item.TotalPrice
                                }
                        </td>
                        <td>@item.Currency</td>
                        <td>
                            <span class="badge rounded-pill
                                        @(
                                                                       item.Status == "CheckedIn" ? "bg-success" :
                                                                       item.Status == "Confirmed" ? "bg-primary" :
                                                                       item.Status == "CheckedOut" ? "bg-info" :
                                                                       item.Status == "Pending" ? "bg-warning text-dark" :
                                                                       item.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                @item.Status
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Reservation" asp-action="Edit" asp-route-id="@item.ReservationId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="fa-solid fa-pen-nib"></i>
                            </a>
                            <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@item.ReservationId" class="btn btn-sm btn-outline-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>