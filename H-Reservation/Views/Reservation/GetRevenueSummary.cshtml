<div class="row g-4 mb-4">

    <!-- Monthly Revenue Card -->
    <div class="col-12 col-lg-6">
        <div class="card kpi-card shadow-lg border-0 h-100">
            <div class="card-body p-4">
                <p class="text-sm font-weight-medium text-secondary mb-2">
                    <i class="bi bi-calendar2-month text-warning me-2"></i>
                    Monthly Revenue — @DateTime.Now.ToString("MMMM yyyy")
                </p>

                <div class="d-flex justify-content-between align-items-center">
                    <!-- KHR -->
                    <div>
                        <h5 class="fw-bold text-dark mb-1">KHR</h5>
                        <span class="display-6 fw-bolder text-success">
                            ៛@String.Format("{0:N0}", ViewBag.KHRMonth ?? 0)
                        </span>
                        <small class="d-block text-success">
                            Growth: @String.Format("{0:N2}", ViewBag.KHRGrowth ?? 0)%
                        </small>
                    </div>

                    <!-- USD -->
                    <div>
                        <h5 class="fw-bold text-dark mb-1">USD</h5>
                        <span class="display-6 fw-bolder text-primary">
                            $@String.Format("{0:N2}", ViewBag.USDMonth ?? 0)
                        </span>
                        <small class="d-block text-primary">
                            Growth: @String.Format("{0:N2}", ViewBag.USDGrowth ?? 0)%
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yearly Revenue Card -->
    <div class="col-12 col-lg-6">
        <div class="card kpi-card shadow-lg border-0 h-100">
            <div class="card-body p-4">
                <p class="text-sm font-weight-medium text-secondary mb-2">
                    <i class="bi bi-calendar2-year text-success me-2"></i>
                    Year Revenue — @DateTime.Now.Year
                </p>

                <div class="d-flex justify-content-between align-items-center">
                    <!-- KHR -->
                    <div>
                        <h5 class="fw-bold text-dark mb-1">KHR</h5>
                        <span class="display-6 fw-bolder text-success">
                            ៛@String.Format("{0:N0}", ViewBag.KHRYear ?? 0)
                        </span>
                    </div>

                    <!-- USD -->
                    <div>
                        <h5 class="fw-bold text-dark mb-1">USD</h5>
                        <span class="display-6 fw-bolder text-primary">
                            $@String.Format("{0:N2}", ViewBag.USDYear ?? 0)
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<style>
    .kpi-card {
        transition: all 0.3s ease;
    }

        .kpi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

    .text-success {
        color: #28a745 !important;
    }

    .text-primary {
        color: #0d6efd !important;
    }

</style>