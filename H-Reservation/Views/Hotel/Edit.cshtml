@using H_application.DTOs.HotelDto
@model HotelDtoUpdate

@{
    ViewData["Title"] = "Hotel";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Hotel Information</h4>
        <form asp-controller="Hotel" asp-action="Update" method="post">
            <input asp-for="HotelId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label asp-for="Name" class="control-label">Hotel Name</label>
                    <input asp-for="Name" type="text" placeholder="Hotel Name" class="form-control " />

                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="City" class="text-danger"></span>
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" type="text" placeholder="City" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control" />
                </div>

            </div>
            <div class="form-row">

                <div class="form-group col-sm-6">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" type="text" placeholder="Phone" class="form-control" />
                </div>

                <div class="form-group col-sm-6">
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" type="text" placeholder="Address" class="form-control" />
                </div>
            </div>

            <div class="form-group float-right">
                <button type="submit" class="btn btn-sm btn-success ml-1">Save Change</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>