@using H_application.DTOs.SystemSettingsDto
@model SystemSettingsDtoUpdate

@{
    ViewData["Title"] = "System Setting";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Delete System Setting Information</h4>
        <form asp-controller="SystemSettings" asp-action="Destroy" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SettingId" />
            <div>
                <label asp-for="IsActive" class="control-label">IsActive</label>
                <input type="checkbox" asp-for="IsActive" class="form-check-input ml-2" />
            </div>
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Key" class="text-danger"></span>
                    <label asp-for="Key" class="control-label">Key Setting</label>
                    <input asp-for="Key" type="text" placeholder="Key Setting" class="form-control " />

                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Value" class="text-danger"></span>
                    <label asp-for="Value" class="control-label">Value Setting</label>
                    <input asp-for="Value" type="text" placeholder="Value Setting" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <label asp-for="Category" class="control-label">Category</label>
                    <input asp-for="Category" type="text" placeholder="Category" class="form-control" />
                </div>

            </div>
            <div class="form-row">

                <span asp-validation-for="Description" class="text-danger"></span>
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" type="text" placeholder="Description" class="form-control" />


            </div>

            <div class="form-group float-right mt-2">
                <button type="submit" class="btn btn-sm btn-success ml-1">Delete</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>