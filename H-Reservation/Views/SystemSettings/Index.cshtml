
@using H_application.DTOs.SystemSettingsDto
@model IEnumerable<SystemSettingsResponse>
<partial name="_style" />
<div class="card">
    <div class="card-body">
        <h4 class="card-title">SystemSetting Information</h4>
        <a asp-action="Create" class="btn btn-sm btn-success mt-2 mb-2"><i class="fa-solid fa-square-plus"></i></a>
        <div class="table-responsive">
            <table class="table table-stripped table-hover  zero-configuration">
                <thead>
                    <tr>

                        <th>
                          Key
                        </th>
                        <th>
                            Value
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(items => item.Key)
                            </td>

                            <td>
                                @Html.DisplayFor(items => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(items => item.Category)
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span style="color: green; font-weight: bold;">Active</span>
                                }
                                else
                                {
                                    <span style="color: red; font-weight: bold;">Inactive</span>
                                }
                            </td>

                            <td>
                                @Html.DisplayFor(items => item.Description)
                            </td>
                            <td>
                                <a asp-controller="SystemSettings" asp-action="Edit" asp-route-Id="@item.SettingId" class="mr-2">
                                    <i class="fa-solid fa-pen-nib icon-edit"></i>
                                </a>
                                <a asp-controller="SystemSettings" asp-action="Delete" asp-route-Id="@item.SettingId">
                                    <i class="fa-solid fa-trash icon-delete"></i>
                                </a>
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
