@using H_application.DTOs.InvoicesDto
@model IEnumerable<InvoicesResponse>

@{
    Layout = "_PdfLayout";
    ViewData["Title"] = "Invoices";
    bool separatePages = ViewData["SeparatePages"] as bool? ?? true;
}
    @foreach (var invoice in Model)
    {
        <div class="card">
            <div class="card-body">
            <div class="bg-danger-lighten-2 border-bottom pb-3 mb-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="fw-bold text-primary mb-1">INVOICE</h1>
                    <p class="text-muted mb-0 text-info">RESERVATION ID : <strong>@invoice.ReservationId</strong></p>
                    </div>
                    <div class="text-end">
                    <p class="text-secondary mb-1"><strong> Date:</strong> @invoice.IssuedDate?.ToString("dd MMM yyyy")</p>
                    <p><strong class="text-primary">INVOICE ID : </strong> #@invoice.InvoiceId</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-uppercase fw-bold text-secondary">Billed From</h6>
                        <p class="fw-semibold mb-0">@invoice.HotelName</p>
                        <p class="mb-0">@invoice.StreetName</p>
                        <p class="mb-0">@invoice.Address</p>
                    </div>
                <div class="col-md-6 text-end">
                        <h6 class="text-uppercase fw-bold text-secondary">Billed To</h6>
                        <p class="fw-semibold mb-0">Guest Name : @invoice.GuestName</p>
                        <p class="mb-0">Room : @invoice.RoomNumber (@invoice.RoomType)</p>
                        <p class="mb-0">Check-in : @invoice.CheckInDate?.ToString("dd MMM yyyy")</p>
                        <p>Check-out: @invoice.CheckOutDate?.ToString("dd MMM yyyy")</p>
                    </div>
                </div>

                <table class="table table-bordered align-middle shadow-sm">
                    <thead style="background-color: #0d6efd; color: #fff;">
                        <tr>
                        <th>Service Name</th>
                            <th class="text-end">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (invoice.Services != null && invoice.Services.Any())
                        {
                            foreach (var item in invoice.Services)
                            {
                                var subtotal = (item.Price ?? 0) * (item.Quantity ?? 1);
                                <tr>
                                    <td>@item.ServiceName</td>
                                    <td class="text-end">@item.Quantity</td>
                                    <td class="text-end">@item.Price?.ToString("C")</td>
                                    <td class="text-end">@subtotal.ToString("C")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No services added.</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row justify-content-end mt-4">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="text-end fw-semibold">Room & Services Total : </td>
                                <td class="text-end fw-semibold">@invoice.TotalAmount?.ToString("C")</td>
                            </tr>
                            <tr>
                                <td class="text-end fw-semibold">Tax : </td>
                                <td class="text-end fw-semibold">@invoice.TaxAmount?.ToString("C")</td>
                            </tr>
                            <tr class="border-top">
                                <td class="text-end fw-bold fs-5">Grand Total:</td>
                                <td class="text-end fw-bold fs-5 text-primary">@invoice.GrandTotal?.ToString("C")</td>
                            </tr>
                        </table>
                    </div>
                </div>

            <div class="bg-danger-lighten-2 text-center mt-4 border-top pt-3">
                    <p class="text-muted small mb-1">Thank you for your business!</p>
                    <p class="text-muted small mb-0">For billing inquiries, please contact our front desk or billing department.</p>
                </div>

            </div>
        </div>
    }

<div class="text-end mt-4 no-print mb-4">
        <button class="btn btn-sm btn-success" onclick="window.print()"><i class="fa-solid fa-print mr-1"></i>Print All</button>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
 </div>
