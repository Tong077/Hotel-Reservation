@using H_application.DTOs.InvoicesDto
@model InvoicesResponse
@{
    ViewData["Title"] = "Invoice Detail";
}

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <div class="card shadow">
            <div class="card-body p-4">

                <!-- Header -->
                <header class="mb-4 pb-3 border-bottom border-secondary">
                    <h2 class="card-title h3 mb-0 d-flex justify-content-between align-items-center">
                        Invoice Detail
                        <span class="badge bg-primary text-white fs-6">
                            #@Model.InvoiceId
                        </span>
                    </h2>
                </header>

                <!-- Reservation Information -->
                <div class="row mb-4">
                   
                    <div class="col-md-4">
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Reservation :</p>
                            <p class="text-dark">@Model.ReservationId</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Guest Name :</p>
                            <p class="text-dark">@Model.GuestName</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Room Number :</p>
                            <p class="text-dark">@Model.RoomNumber</p>
                        </div>
                    </div>

                 
                    <div class="col-md-4">
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Room Type :</p>
                            <p class="text-dark">@Model.RoomType</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Check In :</p>
                            <p class="text-dark">@Model.CheckInDate?.ToShortDateString()</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Check Out :</p>
                            <p class="text-dark">@Model.CheckOutDate?.ToShortDateString()</p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Hotel Name : </p>
                            <p class="text-dark">@Model.HotelName</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">City : </p>
                            <p class="text-dark">@Model.StreetName</p>
                        </div>
                        <div class="mb-2">
                            <p class="fw-semibold text-secondary mb-1">Address : </p>
                            <p class="text-dark">@Model.Address</p>
                        </div>
                    </div>
                   
                </div>

                
                @if (Model.Services != null && Model.Services.Any())
                {
                    <div class="table-responsive mb-4">
                        <h5 class="fw-bold text-secondary mb-2">Services Used</h5>
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Service Name</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Price ($)</th>
                                    <th class="text-end">Subtotal ($)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Services)
                                {
                                    var subtotal = (item.Quantity ?? 1) * item.Price;
                                    <tr>
                                        <td>@item.ServiceName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price?.ToString("0.00")</td>
                                        <td class="text-end">@subtotal?.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

               
                <div class="p-3 bg-light rounded shadow-sm mb-3">
                    <div class="d-flex justify-content-between border-bottom pb-1 mb-1">
                        <span class="fw-medium text-secondary">Total Amount:</span>
                        <span class="fw-bold text-dark">$@Model.TotalAmount</span>
                    </div>

                    <div class="d-flex justify-content-between border-bottom pb-1 mb-1">
                        <span class="fw-medium text-secondary">Tax Amount:</span>
                        <span class="fw-bold text-dark">$@Model.TaxAmount</span>
                    </div>

                    <div class="d-flex justify-content-between pt-2">
                        <span class="h5 fw-bold text-dark mb-0">Grand Total:</span>
                        <span class="h4 fw-bolder text-primary mb-0">$@Model.GrandTotal</span>
                    </div>
                </div>

               
                <div class="mt-3">
                    <p class="fw-semibold text-secondary mb-1">Payment Method :</p>
                    <p class="font-monospace text-dark">@Model.PaymentMethod</p>
                </div>

              
                <div class="mt-4 pt-3 border-top border-secondary d-flex gap-2 justify-content-end">
                    <a asp-action="Print" asp-route-id="@Model.InvoiceId" class="btn btn-sm btn-success">
                        <i class="bi bi-printer-fill"></i> Print Invoice
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary ml-3">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
