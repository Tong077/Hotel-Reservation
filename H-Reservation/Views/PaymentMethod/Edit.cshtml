@using H_application.DTOs.PaymentMethodDto
@model PaymentMethodDtoUpdate

@{
    ViewData["Title"] = "Hotel";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update PaymentMethod Information</h4>
        <form asp-controller="PaymentMethod" asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PaymentMethodId" type="hidden" />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label class="form-check-label" for="IsActive">
                    IsActive
                </label>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" type="text" placeholder="Name" class="form-control " />

                </div>
                <div class="form-group col-sm-6">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" type="text" placeholder="Description" class="form-control" />
                </div>

            </div>
            <div class="form-group float-right">
                <button type="submit" class="btn btn-sm btn-success ml-1">Save Change</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>
