
@using H_application.DTOs.PaymentMethodDto
@model IEnumerable<PaymentMethodResponse>
<partial name="_style" />
<div class="card">
    <div class="card-body">
        <h4 class="card-title">PaymentMethod Information</h4>
        <a asp-action="Create" class="btn btn-sm btn-success mt-2 mb-2"><i class="fa-solid fa-square-plus"></i></a>
        <div class="table-responsive">
            <table class="table table-stripped table-hover  zero-configuration">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                             Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(items => item.PaymentMethodId)
                            </td>
                            <td>
                                @Html.DisplayFor(items => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(items => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(items => item.IsActive)
                            </td>
                           
                            <td>
                                <a asp-controller="PaymentMethod" asp-action="Edit" asp-route-id="@item.PaymentMethodId" class="btn btn-sm btn-outline-primary mr-1">
                                    <i class="fa-solid fa-pen-nib"></i>
                                </a>
                                <a asp-controller="PaymentMethod" asp-action="Delete" asp-route-id="@item.PaymentMethodId" class="btn btn-sm btn-outline-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
