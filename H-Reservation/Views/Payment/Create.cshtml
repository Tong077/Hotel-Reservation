@using H_application.DTOs.Payment
@model PaymentDtoCreate
@{
    ViewData["Title"] = "Payment";
}

@if (TempData["ModelStateErrors"] != null)
{
    <div class="alert alert-danger">
        <strong>Errors:</strong> @TempData["ModelStateErrors"]
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h4 class="card-title mb-3"><i class="fa fa-credit-card"></i> Add New Payment</h4>
        <hr />

        <form asp-controller="Payment" asp-action="Store" method="post" enctype="multipart/form-data" id="paymentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Reservation Selection -->
            <div class="form-group">
                <label class="font-weight-bold">Select Reservations</label>
                <div class="custom-dropdown w-100">
                    <div class="form-control dropdown-display text-truncate" id="dropdownButton" onclick="toggleDropdown()">
                        Select reservations
                    </div>
                    <div class="dropdown-list border bg-white shadow-sm d-none" id="dropdownList">
                        @foreach (var r in ViewBag.Reservations)
                        {
                            <div class="dropdown-item">
                                <input type="checkbox"
                                       value="@r.ReservationId"
                                       data-amount="@r.TotalAmount"
                                       data-currency="@r.Currency"
                                       class="reservation-checkbox"
                                       id="res_@r.ReservationId" />
                                <label for="res_@r.ReservationId" class="mb-0">
                                    <strong>@r.GuestFullName</strong> - Room <b>@r.RoomNumber</b>
                                    <br />
                                    <small class="text-muted">Total: @r.DisplayTotal</small>
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <small class="text-muted">You can select multiple reservations.</small>
                <div id="ReservationIdsContainer"></div>
            </div>

            <!-- Total Amount -->
            <div class="form-group">
                <label asp-for="Amount" class="font-weight-bold">Total Amount</label>
                <div class="input-group">
                    <input asp-for="Amount" class="form-control" id="AmountInput" readonly />
                    <div class="input-group-append">
                        <span class="input-group-text" id="CurrencyLabel">USD</span>
                    </div>
                </div>
            </div>

            <!-- Payment Details -->
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="PaymentMethodId" class="font-weight-bold">Payment Method</label>
                    <select asp-for="PaymentMethodId" asp-items="@ViewBag.PaymentMethods" class="form-control">
                        <option value="">Select Method</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Currency" class="font-weight-bold">Currency</label>
                    <select asp-for="Currency" class="form-control" id="CurrencySelect">
                        <option value="USD">USD</option>
                        <option value="KHR">KHR</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="RefundAmount" class="font-weight-bold">Refund Amount</label>
                    <input asp-for="RefundAmount" class="form-control" placeholder="0.00" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="PaymentDate" class="font-weight-bold">Payment Date</label>
                    <input asp-for="PaymentDate" type="datetime-local" class="form-control" />
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="RefundDate" class="font-weight-bold">Refund Date</label>
                    <input asp-for="RefundDate" type="date" class="form-control" />
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="PaymentStatus" class="font-weight-bold">Payment Status</label>
                    <select asp-for="PaymentStatus" class="form-control" id="PaymentStatusSelect">
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
            </div>

            <div class="text-right mt-3">
                <button class="btn btn-sm btn-outline-success" type="submit" class="btn btn-success px-4" id="saveBtn">
                    Save
                </button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const dropdownButton = document.getElementById('dropdownButton');
        const dropdownList = document.getElementById('dropdownList');
        const containerHidden = document.getElementById('ReservationIdsContainer');
        const amountInput = document.getElementById('AmountInput');
        const currencyLabel = document.getElementById('CurrencyLabel');
        const currencySelect = document.getElementById('CurrencySelect');

        function toggleDropdown() {
            dropdownList.classList.toggle('d-none');
        }

        function updateSelectedReservations() {
            const selectedItems = [];
            let total = 0;
            containerHidden.innerHTML = '';

            const checkedBoxes = document.querySelectorAll('.reservation-checkbox:checked');
            if (checkedBoxes.length === 0) {
                amountInput.value = '';
                dropdownButton.textContent = 'Select reservations';
                return;
            }

            const selectedCurrency = checkedBoxes[0].dataset.currency;
            currencyLabel.textContent = selectedCurrency;

            checkedBoxes.forEach(chk => {
                const amount = parseFloat(chk.dataset.amount) || 0;
                total += amount;
                selectedItems.push(chk.nextElementSibling.innerText.split('\n')[0]);

                const inputId = document.createElement('input');
                inputId.type = 'hidden';
                inputId.name = 'ReservationId';
                inputId.value = chk.value;
                containerHidden.appendChild(inputId);

                const inputAmount = document.createElement('input');
                inputAmount.type = 'hidden';
                inputAmount.name = 'ReservationAmount';
                inputAmount.value = amount;
                containerHidden.appendChild(inputAmount);
            });

            amountInput.value = total.toFixed(2);
            dropdownButton.textContent = selectedItems.join(', ');
        }

        document.querySelectorAll('.reservation-checkbox').forEach(cb =>
            cb.addEventListener('change', updateSelectedReservations)
        );

        document.addEventListener('click', function (e) {
            if (!document.querySelector('.custom-dropdown').contains(e.target)) {
                dropdownList.classList.add('d-none');
            }
        });
             // Completed payment warning
        const paymentSelect = document.getElementById('PaymentStatusSelect');
        paymentSelect.addEventListener('change', function () {
            if (this.value === "Completed") {
                toastr.warning("Completed payments cannot be modified.");
            }
        });

        // Prevent multiple submissions
        document.getElementById('paymentForm').addEventListener('submit', function() {
            document.getElementById('saveBtn').disabled = true;
        });
    </script>
}

<style>
    .custom-dropdown {
        position: relative;
        width: 100%;
    }

    .dropdown-display {
        height: 38px;
        display: flex;
        align-items: center;
        cursor: pointer;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .dropdown-list {
        position: absolute;
        width: 100%;
        max-height: 250px;
        overflow-y: auto;
        z-index: 1000;
        border-radius: .25rem;
    }

    .dropdown-item {
        padding: 5px 10px;
        display: flex;
        align-items: start;
        gap: 8px;
    }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }
</style>
