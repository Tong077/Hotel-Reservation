
<div class="row g-5 mb-4">

    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card kpi-card shadow-lg border-0 h-100">
            <div class="card-body p-4">
                <p class="text-sm font-weight-medium text-secondary mb-1">Completed Payments (USD)</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="display-4 fw-bolder text-dark">
                        @ViewBag.TotalUsd
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card kpi-card shadow-lg border-0 h-100">
            <div class="card-body p-4">
                <p class="text-sm font-weight-medium text-secondary mb-1">Completed Payments (KHR)</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="display-4 fw-bolder text-dark">
                        @ViewBag.TotalKhr
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card kpi-card shadow-lg border-0 h-100">
            <div class="card-body p-4">
                <p class="text-sm font-weight-medium text-secondary mb-1">Payment Pending</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="display-4 fw-bolder text-dark">
                        @ViewBag.PendingPayments
                    </span>
                </div>
            </div>
        </div>
    </div>

</div>
