@using H_application.DTOs.ServicesDto
@model ServicesDtoCreate

@{
    ViewData["Title"] = "Services";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add New Services Information</h4>
        <form asp-controller="Services" asp-action="Store" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="IsActive" class="control-label">IsActive</label>
            <input type="checkbox" asp-for="IsActive" class="form-check-input ml-2" />
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                    <label asp-for="ServiceName" class="control-label">ServiceName</label>
                    <input asp-for="ServiceName" type="text" placeholder="ServiceName" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <label asp-for="Category" class="control-label">Category</label>
                    <input asp-for="Category" type="text" placeholder="Category" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <label asp-for="Price" class="control-label">Price</label>
                    <input asp-for="Price" type="number" placeholder="Price" class="form-control" />
                </div>

            </div>
            <div class="form-row">

                <div class="form-group col-sm-6">
                    <span asp-validation-for="Currency" class="text-danger"></span>
                    <label asp-for="Currency" class="control-label">Currency</label>
                    <select asp-for="Currency" class="form-control">
                        <option>Please Select Currency Type</option>
                        <option value="KHR">KHR</option>
                        <option value="USD">USD</option>

                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" type="text" placeholder="Description" class="form-control" />
                </div>
            </div>
            <div class="form-group float-right">
                <button type="submit" class="btn btn-sm btn-success ml-1">Save</button>
                <a asp-action="Index" class="btn btn-sm btn-danger">Cancel</a>
            </div>
        </form>
    </div>

</div>